<%- include('partials/header') %>

    <div class="ui main text container">
        <div class="ui huge header"><h3><%= blog.title %></h3></div>
        <div class="ui top attached segment">  
            <div class="item">    
                <img class="ui centered rounded image" src="<%= blog.image %>" alt="<%= blog.title %>">
                <div class="content">
                    <span><%= blog.created.toDateString() %></span>
                </div>
                <div class="description">
                    <p><%-blog.body%></p>
                </div>
            </div>
        </div>


        <div class="ui item">
            <button class="ui inverted green large button"><a href="/blogs/<%= blog._id %>/edit">
                Edit
            </a></button>
            <button class="ui inverted teal large button"><a href="/blogs">
                Back
            </a></button>

            <div class="ui item" id="del">
                <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" class="ui item">
                    <button class="ui inverted red large button" type="submit" id="del_btn">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>


<%- include('partials/footer') %>