<%- include('partials/header') %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>

    <!-- form action is different than the New Route -->
    <form class="ui form"  action="/blogs/<%= blog._id %>?_method=PUT" method="POST">  
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>" required>
        </div>
        <div class="field">
            <label>Body Content </label>
            <textarea name="blog[body]" required><%= blog.body %></textarea>
        </div>
        <div class="field">
            <button class="ui inverted blue big button" type="submit">Submit</button>
        </div>   
    </form>

</div>

<%- include('partials/footer') %>