<%- include('partials/header') %>

<div class="ui main text container">
    <div class="ui huge header">
        RESTful BlogApp
    </div>

    <div class="ui top attached segment">
        <div class="ui divided items">
            <% Blogs.forEach(blog=> {%>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>" alt="<%= blog.title %>"></img>
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"> <%= blog.title %> </a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%-blog.body.substring(0,100)%>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>"> 
                                Read More <i class="right chevron icon"></i> 
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div> 
    </div>

    <div id="instructions">
        <p>
            Just 'Add' (Homepage -> New Post), 'Delete' (Read More -> Delete button) or 'Update' (Read More -> Edit) blogs<br/>
            Play around, Have fun
        </p>
    </div>
</div>
<%- include('partials/footer') %>
